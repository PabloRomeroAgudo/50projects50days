---
import Github from "../icons/Github.astro"
import World from "../icons/World.astro"
import ProjectImage from "./ProjectImage.astro"

const { project } = Astro.props
const { id } = project
---

<article class="flex flex-col p-6 gap-6 border border-primary-200 rounded-lg">
  <a
    href={`${project.slug}`}
    class="text-3xl font-bold text-center hover:text-secondary-700 hover:scale-110 transition duration-300 text-primary-800 active:scale-95 active:text-secondary-900"
  >
    {project.title}
  </a>

  <p class="self-center text-primary-600">{project.description}</p>

  <ProjectImage slug={project.slug} id={id} title={project.title} />

  <div class="flex gap-2 justify-center justify-self-end mt-auto">
    <a
      href={project.urlCodigo}
      class={`flex border-2 rounded-md font-semibold 
        text-primary-500 border-primary-500 p-2 
        hover:bg-primary-500 hover:text-white hover:scale-110 
        active:bg-primary-900 active:border-primary-900 active:translate-y-1 active:shadow-xl active:scale-100
        transition duration-300 `}
    >
      <div class="py-1">
        <Github height="20" width="20" />
      </div>
      Ver c√≥digo
    </a>
    <a
      href={`${project.slug}`}
      target="_blank"
      class={`flex border-2 rounded-md font-semibold 
        text-secondary-700 border-secondary-700 p-2 
        hover:bg-secondary-700 hover:text-white hover:scale-110
        active:bg-secondary-900 active:border-secondary-900 active:translate-y-1 active:shadow-xl active:scale-100
        transition duration-300 `}
    >
      <div class="py-1">
        <World />
      </div>
      Demo
    </a>
  </div>
</article>
